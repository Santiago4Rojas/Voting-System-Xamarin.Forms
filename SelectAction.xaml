<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JRojas.SelectAction"
             BackgroundColor="White">

    <StackLayout Padding="30" Spacing="20" VerticalOptions="Center">
        <!-- Título -->
        <Label Text="Seleccione una Opción"
               FontSize="Large"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               TextColor="Black" />

        <!-- Botón 1 -->
        <Button Text="Agregar Candidatos"
                BackgroundColor="#32CD32"
                TextColor="White"
                FontSize="Medium"
                CornerRadius="10"
                HeightRequest="50"
                Clicked="OnOption1Clicked" />

        <!-- Botón 2 -->
        <Button Text="Conteo de votos"
                BackgroundColor="#32CD32"
                TextColor="White"
                FontSize="Medium"
                CornerRadius="10"
                HeightRequest="50"
                Clicked="OnOption2Clicked" />
    </StackLayout>
</ContentPage>
